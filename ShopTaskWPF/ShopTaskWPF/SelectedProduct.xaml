<Window x:Class="ShopTaskWPF.SelectedProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopTaskWPF"
        mc:Ignorable="d"
        Title="SelectedProduct" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="20" Content="Product Name:"/>
        <TextBox FontSize="20" Height="40" Margin="5"  Text="{Binding SName}" Name="tb_sname"/>
        <Label FontSize="20" Content="Product Content:"/>
        <TextBox FontSize="20" Height="40" Margin="5" Text="{Binding SContent}" Name="tb_scontent"/>
        <Label FontSize="20" Content="Product Price:"/>
        <TextBox FontSize="20" Height="40" Margin="5" Text="{Binding SPrice}" Name="tb_sprice"/>
        <Label FontSize="20" Content="Product Photo:"/>
        <Image Height="40" Margin="5" Source="{Binding SPhoto}" Name="tb_sphoto"/>
        <Button Content="Ok" Height="50" Width="200" FontSize="20" Name="btn_sEdit" Click="btn_sEdit_Click"/>
    </StackPanel>
</Window>
